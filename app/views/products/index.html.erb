<h1>Lista produktów</h1>
<%= link_to 'Nowy produkt', new_product_path %>
<table>
  <tr>
    <th>Nazwa</th>
    <th>Opis</th>
	<th colspan="3"></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.nazwa %></td>
      <td><%= product.opis %></td>
      <td><%= link_to 'Pokaż', product_path(product) %></td>
	  <td><%= link_to 'Edytuj', edit_product_path(product) %></td>
	  <td><%= link_to 'Usuń', product_path(product),
              method: :delete,
              data: { confirm: 'Czy na pewno?' } %></td>
    </tr>
  <% end %>
</table>